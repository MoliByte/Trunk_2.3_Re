<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Skin_White"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollViewShot"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/imageContainers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/Skin_White"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <com.idongler.widgets.CircleImageView
                    android:id="@+id/circleUserImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/my_pic_default" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tvUserNick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="爱笑的小馒头"
                        android:textColor="#595959"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/location" />

                        <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="120dp"
                            android:text="安徽省安庆市"
                            android:textColor="#a0a0a0"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tvUserAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="25岁"
                        android:textColor="#a0a0a0"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvSkinType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="干性肤质"
                        android:textColor="#a0a0a0"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/userLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LV1"
                        android:textColor="@color/coin_text_color"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Skin_White" >

                <LinearLayout
                    android:id="@+id/LinearLayoutiv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" >

                    <ImageView
                        android:id="@+id/ivProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/home_default" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@+id/LinearLayoutiv"
                    android:background="#55000000"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:text="美即浸透美肤面膜"
                    android:textColor="#fff"
                    android:textSize="14sp" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="top"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Skin_White" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@color/facial_result_back2"
                        android:gravity="top|center_horizontal"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="面膜前"
                            android:textColor="#a0a0a0"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="invisible" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/facialraise" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0%"
                                android:textColor="#848484"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@color/facial_result_back2"
                        android:gravity="top|center_horizontal"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/step2time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="即时补水"
                            android:textColor="#a0a0a0"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/raise1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/facialraise" />

                            <TextView
                                android:id="@+id/water1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0%"
                                android:textColor="#848484"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@color/facial_result_back2"
                        android:gravity="top|center_horizontal"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/step3time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="持续补水"
                            android:textColor="#a0a0a0"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/raise2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/facialraise" />

                            <TextView
                                android:id="@+id/water2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0%"
                                android:textColor="#848484"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@color/facial_result_back2"
                        android:gravity="top|center_horizontal"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/step4time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="长效补水"
                            android:textColor="#a0a0a0"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/raise3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/facialraise" />

                            <TextView
                                android:id="@+id/water3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0%"
                                android:textColor="#848484"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <com.app.custom.view.FacialChartView
                    android:id="@+id/screenShotChartView"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#f2f2f2" />

            <TextView
                android:id="@+id/tvPublishContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Skin_White"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#848484" />

           

            <ImageView
                android:id="@+id/imageView1"
                android:paddingTop="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f2f2f2"
                android:src="@drawable/share_login" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>