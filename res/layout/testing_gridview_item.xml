<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0fff"
    android:gravity="center_horizontal" >

    <ImageView
        android:id="@+id/imageViewTestingItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/water_select"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewTestingItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageViewTestingItem"
        android:layout_alignLeft="@+id/imageViewTestingItem"
        android:layout_alignBottom="@+id/imageViewTestingItem"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="15dp"
        android:textSize="30sp"
        android:text="TextView" />

</RelativeLayout>
