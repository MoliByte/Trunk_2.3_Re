<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/title_back_color" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@color/title_down_line" />

        <RadioGroup
            android:id="@+id/radioGroupTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="31dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <RadioButton
                android:id="@+id/radioSelect"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:button="@null"
                android:checked="true"
                android:text="精选"
                android:textColor="@color/home_title_selector"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radioDongTai"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:text="动态"
                android:textColor="@color/home_title_selector"
                android:textSize="18sp" />
        </RadioGroup>
    </RelativeLayout>

    <com.app.custom.view.HomeViewPager
        android:id="@+id/homeViewPagerMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </com.app.custom.view.HomeViewPager>

</LinearLayout>