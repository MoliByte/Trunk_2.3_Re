<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:id="@+id/scrollView"
        android:background="#d000">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/n9clock_btn_close_01"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:id="@+id/closeBtn"/>
            <!--中奖名单-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/zhongJianGroup"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:background="@drawable/name_list_text_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#f4bd3f"
                        android:textSize="18sp"
                        android:layout_marginTop="60dp"
                        android:id="@+id/nameListTitle"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:textSize="14sp"
                            android:text="@string/nick_awarded_intro"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/night9oclock_name_list_text"
                        android:id="@+id/nameListTxt"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:textColor="#cfff"
                    android:textSize="33sp"
                    android:text="恭喜你"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:textColor="#8fff"
                    android:textSize="18sp"
                    android:text="已光荣中奖！"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:textColor="#3fff"
                    android:textSize="14sp"
                    android:text="开启24小时火线模式！"/>

                <Button
                    android:layout_width="150dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ct_btn_selector"
                    android:textSize="16sp"
                    android:textColor="#f6b05e"
                    android:text="马上领奖"
                    android:id="@+id/openBtn"/>
            </LinearLayout>

            <!--填写地址-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addressGroup"
                android:orientation="vertical"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#bfff"
                    android:textSize="18sp"
                    android:text="填写奖品寄送信息"/>
                
                <EditText
                    android:id="@+id/shippingAddress"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/box_bg"
                    android:layout_marginTop="8dp"
                    android:hint="例：李青青,上海市 xxx路 xxx号 xxx室,15677522313
"
                    android:textSize="16sp"
                    android:textColor="#6fff"
                    android:gravity="top|left"
                    android:padding="5dp"
                    android:singleLine="false"
                    android:lineSpacingMultiplier="1.2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="#4fff"
                    android:textSize="12sp"
                    android:text="请完整填写收件人姓名、联系电话、城市、路名和门牌号 "/>

                <Button
                    android:layout_width="150dp"
                    android:layout_height="42dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ct_btn_selector"
                    android:textSize="16sp"
                    android:textColor="#f6b05e"
                    android:text="确认提交"
                    android:id="@+id/submitBtn"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#3fff"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/n9clock_icon_tishi_01"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="#3fff"
                        android:textSize="12sp"
                        android:text="获奖伙伴请在24小时内点击 “领奖”填写个人信息。"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="#3fff"
                        android:textSize="12sp"
                        android:text="过期视作无效哦！Ready？Go！"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>