<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/title_back_color" >

        <ImageView
            android:id="@+id/backBtn"
            style="@style/back_image" />

        <TextView
            android:id="@+id/title_name"
            style="@style/app_title_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的订阅" />

        <!-- 分享按钮 -->

        <ImageView
            android:id="@+id/popupShareBtn"
            android:layout_width="@dimen/back_button_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/button_selector"
            android:padding="6dp"
            android:src="@drawable/share_icon_60"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@color/title_down_line" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/Skin_White"
        android:gravity="center"
        android:orientation="vertical" >

        <RadioGroup
            android:id="@+id/radioGroupSubscribe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radioBrand"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="品牌"
                android:textColor="@color/my_test_choice_test_color_selector"
                android:textSize="16sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/my_test_line_gray" />

            <RadioButton
                android:id="@+id/radioMerchant"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="美容院"
                android:textColor="@color/my_test_choice_test_color_selector"
                android:textSize="16sp" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <View
                    android:id="@+id/linegray1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/my_test_line_gray"
                    android:visibility="gone" />

                <View
                    android:id="@+id/linered1"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/my_test_line_red"
                    android:visibility="visible" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight="1" >

                <View
                    android:id="@+id/linered2"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/my_test_line_red"
                    android:visibility="gone" />

                <View
                    android:id="@+id/linegray2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/my_test_line_gray"
                    android:visibility="visible" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/subcribeContainer1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
    </RelativeLayout>
 </LinearLayout>