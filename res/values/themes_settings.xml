<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- settings activity -->
    <dimen name="settings_item_line_height">48dp</dimen>

    <dimen name="settings_content_padding_left">@dimen/content_padding_left</dimen>
    <dimen name="settings_content_padding_right">@dimen/content_padding_right</dimen>

    <dimen name="settings_item_padding_right">10dp</dimen>

    <style name="setting_avatar_line">
        <item name="android:layout_marginLeft">@dimen/settings_content_padding_left</item>
        <item name="android:layout_marginRight">@dimen/settings_content_padding_right</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/box_bg</item>
    </style>

    <style name="setting_item_span">
        <item name="android:layout_marginLeft">@dimen/settings_content_padding_left</item>
        <item name="android:layout_marginRight">@dimen/settings_content_padding_right</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/box_bg</item>
    </style>


    <style name="setting_item_label">
        <item name="android:paddingLeft">@dimen/settings_content_padding_left</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/main_font_80</item>
        <item name="android:gravity">center_vertical</item>
    </style>



    <style name="setting_skin">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_font_80</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="setting_age">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_font_80</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!-- user profile -->
    <dimen name="user_profile_edit_height">58dp</dimen>
    <dimen name="user_profile_label_width">80dp</dimen>


    <style name="user_profile_edit_line">
        <item name="android:layout_marginLeft">@dimen/settings_content_padding_left</item>
        <item name="android:layout_marginRight">@dimen/settings_content_padding_right</item>
        <item name="android:paddingTop">10dp</item>
    </style>
    <style name="user_profile_line">
        <item name="android:layout_marginLeft">@dimen/settings_content_padding_left</item>
        <item name="android:layout_marginRight">@dimen/settings_content_padding_right</item>
        <item name="android:background">#22ffffff</item>
    </style>


    <style name="user_profile_edit_txt">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_font_80</item>
    </style>

    <!-- password modify activity -->
    <dimen name="password_content_padding_left">@dimen/content_padding_left</dimen>
    <dimen name="password_content_padding_right">@dimen/content_padding_right</dimen>


    <style name="password_edit_line">
        <item name="android:layout_marginLeft">@dimen/password_content_padding_left</item>
        <item name="android:layout_marginRight">@dimen/password_content_padding_right</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/edit_box_selector</item>
    </style>


    <style name="password_hint">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:background">#11ffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_font_80</item>
    </style>

    <style name="setting_hint_text">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#11ffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_font_80</item>
    </style>

    <style name="setting_verifycode_text">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/main_font_50</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="setting_image_edit">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">#11ffffff</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="profile_image_edit">
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="profile_hint_text">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_font_60</item>
    </style>



    <!-- 用户反馈-->
    <dimen name="feedback_edit_height">150dp</dimen>

    <dimen name="feedback_content_padding_left">@dimen/content_padding_left</dimen>
    <dimen name="feedback_content_padding_right">@dimen/content_padding_right</dimen>



    <style name="feedback_content">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/main_font_60</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">false</item>
        <item name="android:gravity">left|top</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="setting_submit_btn">
        <item name="android:layout_marginLeft">@dimen/settings_content_padding_left</item>
        <item name="android:layout_marginRight">@dimen/settings_content_padding_right</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/submitbtn_call_selector</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="setting_submit_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/main_font_80</item>
    </style>

    <style name="setting_submit_next">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/main_font_90</item>
    </style>
    <drawable name="focus_line_color" >#ffd4d873</drawable>
    <drawable name="fault_line_color" >#55ffffff</drawable>

    <style name="next_btn">
        <item name="android:src">@drawable/forward_icon_25</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingRight">@dimen/settings_item_padding_right</item>
    </style>

    <color name="settingitem_background">#00000000</color>
    <color name="settingitem_pressed_background">#11ffffff</color>


    <!-- about -->
    <style name="setting_about_content">
        <item name="android:layout_marginLeft">@dimen/settings_content_padding_left</item>
        <item name="android:layout_marginRight">@dimen/settings_content_padding_right</item>
        <item name="android:background">@drawable/box_bg</item>
    </style>

</resources>