<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <dimen name="main_skin_test_height">200dp</dimen>
    <dimen name="main_skin_test_width">200dp</dimen>

    <dimen name="main_bottom_height">278dp</dimen>
    <dimen name="main_bottom_background_height">258dp</dimen>
    <dimen name="main_func_btn_height">90dp</dimen>
    <dimen name="main_func_btn_width">90dp</dimen>

    <dimen name="main_weather_img_height">36dp</dimen>

    <!-- main activity style -->
    <style name="main_content">
        <item name="android:background">@drawable/background_320_568</item>
    </style>
    

    <style name="main_skin_test_txt">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/main_font</item>
    </style>

    <style name="main_skin_func_txt">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main_font</item>
    </style>


    <style name="main_city_weather">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    
    <style name="main_city_temperature_txt">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/main_font</item>
    </style>


    <style name="main_sky_txt">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main_font</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="main_sky_value_txt" parent="main_sky_txt">
        <item name="android:layout_marginLeft">5dp</item>
    </style>


</resources>