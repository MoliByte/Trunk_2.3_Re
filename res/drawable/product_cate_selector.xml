<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>

                    <solid android:color="#ff3192"/>
                    <padding
                        android:left="0px"
                        android:top="0px"
                        android:right="0px"
                        android:bottom="2dp"/>

                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/product_activity_background"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item >
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#33a8a8a8"/>
                    <padding
                        android:left="0px"
                        android:top="0px"
                        android:right="0px"
                        android:bottom="2px"/>
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/product_activity_background"/>
                </shape>
            </item>
        </layer-list>
    </item>
